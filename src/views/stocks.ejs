<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="<%= ("/") %> ">stockAnalysis</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="<%= ("/") %> ">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="<%= ("/stocks") %> ">Stocks</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled">Pricing</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled">Disabled</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
<div class="row justify-content-center">
    <div class="col-auto">
        <table class="table table-responsive">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Symbol</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Trend</th>
                <th scope="col">Dividend</th>
                <th scope="col">Volume</th>
                <th scope="col">P/E Ratio</th>
                <th scope="col">Action</th>
                <th scope="col">Action</th>
                </tr>
            </thead>
        <% stocks.forEach(function(stock) { %>    
            <tbody>
                <tr>
                <th scope="row"><%= stock._id %></th>
                <td><%= stock.symbol %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td>
                    <form action="/stock_data" method="post">
                    <button type="submit" name="<%= stock.symbol %>" class="btn btn-primary">Actualizar</button>
                    </form>
                </td>
                <td>
                  <form action="/stock_delete" method="post">
                  <button type="submit" name="<%= stock._id %>" class="btn btn-primary">Borrar</button>
                  </form>
              </td>
                </tr>
            </tbody>   
        <% }); %>
        </table>
        <form action="/stock_add" method="post">
            <div class="input-group mb-3">
                <input type="text" name="add" class="form-control" placeholder="Stock to add" aria-label="Stock to add" aria-describedby="button-addon2">
                <button class="btn btn-primary" type="submit" id="button-addon2" >Add</button>
            </div>
        </form>
          
    </div>
</div>
</body>
</html>